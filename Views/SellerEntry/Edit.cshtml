@model SellerModel


<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class ="card">
                <div class="card-header bg-primary text-white">
                    <h2>Ažuriraj prodavataljea</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" >
                        <div class="form-group mb-3">
                            <label asp-for="Oib" class="form-label">OIB</label>
                            <input asp-for="Oib" class="form-control" placeholder="Enter a oib" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Ime</label>
                            <input asp-for="Name" row="5" class="form-control" placeholder="Enter name" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Surname" class="form-label">Surname</label>
                            <input asp-for="Surname" class="form-control" placeholder="Enter a surname" />
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Ažuriraj</button>
                            <a asp-controller="SellerEntry" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>